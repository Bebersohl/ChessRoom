<form class="form-horizontal" role="form">
    <h3>New Game</h3>
    <div class="form-group">
        <label class="control-label" for="opponent">Opponent:</label>
        <select class="form-control" id="opponent">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
        </select>
    </div>
    <div class="form-group">
        <label class="control-label" for="time">Time Limit:</label>
        <select class="form-control" id="time">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
        </select>
    </div>
    <button type="submit" class="btn btn-default">Send Challenge</button>
</form>
